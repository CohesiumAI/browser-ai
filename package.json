{
  "name": "browser-ai",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "pnpm run build:core && pnpm run build:modules && pnpm run build:packages && pnpm run build:examples",
    "build:core": "pnpm --filter @cohesiumai/core run build",
    "build:modules": "pnpm -r --filter \"./packages/modules/**\" run build",
    "build:packages": "pnpm -r --filter \"./packages/**\" --filter \"!./packages/modules/**\" --filter \"!@cohesiumai/core\" run build",
    "build:examples": "pnpm -r --filter \"./examples/**\" run build",
    "dev": "pnpm --filter @cohesiumai/example-vite-text dev",
    "dev:next": "pnpm --filter @cohesiumai/example-next dev",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm -r --filter \"./packages/**\" build && changeset publish",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter @cohesiumai/example-vite-text test:e2e",
    "verify": "pnpm lint && pnpm build && pnpm typecheck && pnpm test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.10.0",
    "tsup": "^8.2.4",
    "typescript": "^5.6.3",
    "vitest": "^2.1.1"
  }
}
