{
  "name": "@browser-ai/modules-memory",
  "version": "1.3.0",
  "description": "Local memory module for browser-ai - conversation context and local RAG",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "lint": "echo 'no lint'",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@browser-ai/core": "workspace:*",
    "@huggingface/transformers": "^3.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^2.1.9",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "@browser-ai/core": "workspace:*"
  },
  "keywords": [
    "browser-ai",
    "memory",
    "local",
    "privacy",
    "indexeddb",
    "conversation"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
