{
  "name": "@browser-ai/modules-ocr",
  "version": "1.2.0",
  "description": "Local OCR module for browser-ai - image and PDF text extraction",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "lint": "echo 'no lint'",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@browser-ai/core": "workspace:*",
    "pdfjs-dist": "^4.10.38",
    "tesseract.js": "^5.1.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^2.1.9",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "@browser-ai/core": "workspace:*"
  },
  "keywords": [
    "browser-ai",
    "ocr",
    "local",
    "privacy",
    "tesseract",
    "pdf"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
